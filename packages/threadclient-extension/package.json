{
  "name": "threadclient-extension",
  "displayName": "ThreadClient Extension",
  "description": "Extension for ThreadClient",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/webextension-polyfill": "^0.8.3",
    "chokidar": "^3.6.0",
    "crx": "^5.0.1",
    "eslint": "^10.0.0",
    "eslint-config-tmeta": "^1.0.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "jszip-cli": "^1.4.24",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "tsconfig-tmeta": "^1.0.0",
    "typescript": "^5.9.3",
    "vite": "3",
    "vite-plugin-solid": "^2.11.10",
    "vite-plugin-windicss": "^1.9.4",
    "web-ext": "^9.3.0"
  },
  "scripts": {
    "dev": "mkdir -p extension && NODE_ENV=development run-p dev:\\*",
    "dev:prepare": "esno src/scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "yarn run build:js --mode development",
    "build": "NODE_ENV=production run-s clear build:web build:prepare build:js pack",
    "build:prepare": "esno src/scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "mkdir -p dist/bundles && NODE_ENV=production run-p pack:\\*",
    "pack:zip": "cd dist/bundles && rm extension.zip; jszip add ../../extension -o extension.zip",
    "pack:crx": "cd dist/bundles && crx pack ../../extension -o extension.crx -p ../key.pem",
    "pack:xpi": "cd dist/bundles && WEB_EXT_ARTIFACTS_DIR=. web-ext build --source-dir ../../extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "lint": "tsc --noEmit && eslint src --max-warnings 0",
    "test": "true",
    "clear": "rm -r extension/"
  },
  "dependencies": {
    "solid-js": "^1.9.11",
    "tmeta-util": "^1.0.0",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.9.0"
  }
}
